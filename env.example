# Peachmini Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# API Configuration
# ===========================================
API_URL=https://your-api-url.vercel.app
FRONT_URL=https://your-frontend-url.vercel.app

# ===========================================
# Database Configuration
# ===========================================
PB_URL=https://your-pocketbase-url.com

# ===========================================
# AI Service Configuration
# ===========================================
# Primary AI Provider (deepseek|openrouter|groq)
AI_PRIMARY=deepseek
AI_MODEL_PRIMARY=deepseek-chat

# Secondary AI Provider (for failover and A/B testing)
AI_SECONDARY=openrouter
AI_MODEL_SECONDARY=anthropic/claude-3.5-haiku:beta

# AI Parameters
AI_TEMP=0.9
AI_MAX_TOKENS=512

# A/B Testing (0=off, 10=10% to secondary, 50=50% to secondary)
AI_AB_TEST=10

# AI Provider API Keys
DEEPSEEK_KEY=sk-your-deepseek-key-here
OPENROUTER_KEY=sk-or-your-openrouter-key-here
GROQ_KEY=gsk_your-groq-key-here

# Legacy OpenAI (optional)
OPENAI_KEY=sk-your-openai-key-here

# ===========================================
# Telegram Bot Configuration
# ===========================================
BOT_TOKEN=your-telegram-bot-token-here
ADMIN_TG_ID=your-telegram-user-id

# ===========================================
# Frontend URLs
# ===========================================
VITE_API_URL=https://your-api-url.vercel.app
VITE_PB_URL=https://your-pocketbase-url.com

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_EMAIL=admin@peachmini.app

# ===========================================
# Analytics
# ===========================================
POSTHOG_KEY=your-posthog-key-here
POSTHOG_HOST=https://app.posthog.com
